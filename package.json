{
  "name": "cognitive-dissonance-engine",
  "version": "0.1.0",
  "private": true,
  "description": "CODE: Offline adversarial sparring partner (Electron + Ollama)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.code.app",
    "productName": "CODE",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "package.json",
      "about.md"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "pdfkit": "^0.15.0",
    "prismjs": "^1.29.0"
  }
}
